<h2>Add an Event</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Event Name:</label>
    <input type="text" id="event-name" name="name">
  </div>
  <div class="form-group">
    <label for="ca">Event Location:</label>
    {{!-- <input type="text" id="event-location" name="location">
     --}}
    <input id="pac-input" type="text"
            placeholder="Enter a location">
   
  </div>
  <div class="form-group">
    <label for="ca">Event Date:</label>
    <input type="text" id="event-date" name="date">
  </div>
  <div class="form-group">
    <label for="ca">Event Description:</label>
    <input type="text" id="event-description" name="description">
  </div>


  <button type="submit" id="register-event">Add Event</button>
</form>